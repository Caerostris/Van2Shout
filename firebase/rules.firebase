{
  "rules": {
    "broadcast": {
      ".read": "auth != null",
      "$key": {    
        ".write": "auth != null && (!data.exists() || auth.delete == true) && auth.post == true != data.child('colour').val()"
      }
    },
    "private": {
      "$user": {
        "$key": {
          ".write": "auth != null && !data.exists() && auth.post == true"
        },
        ".read": "auth.id == $user"
      }
    }
  }
}
